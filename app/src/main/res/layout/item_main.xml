<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="userData"
            type="com.example.kotlin.data.UserData" />

        <variable
            name="cardView"
            type="com.example.kotlin.fragment.MainFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/mainCardView"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"

            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/emailTxtView"
                android:layout_height="60dp"
                android:text="@{userData.email}"
                tools:text="사용자 이메일"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mkTimeTxtView"
                android:layout_width="match_parent"
                android:text="@{userData.mkDate}"
                tools:text="사용자 계정 만든 일자"
                android:textAlignment="center"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                />


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>